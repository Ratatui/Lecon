<navigation:Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				 xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
				 xmlns:riaControls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.DomainServices"
				 xmlns:viewModels="clr-namespace:Lecon.ViewModels"
				 xmlns:Web="clr-namespace:Lecon.Web"
				 xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
				 x:Class="Lecon.Views.CoolerPage"
				 mc:Ignorable="d"
				 d:DesignWidth="640"
				 d:DesignHeight="480"
				 Title="Coolers">
	<navigation:Page.Resources>
		<viewModels:Cooler_ViewModel x:Key="ViewModel" />
	</navigation:Page.Resources>
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<sdk:DataGrid x:Name="DataGrid"
					  Grid.Row="0"
					  ItemsSource="{Binding CoolersView, Source={StaticResource ViewModel}}"
					  AutoGenerateColumns="False">
			<sdk:DataGrid.Columns>
				<sdk:DataGridTextColumn Header="Model"
										Binding="{Binding Device.Model}" />
				<sdk:DataGridTextColumn Header="Manufacturer"
										Binding="{Binding Device.Manufacturer.Name}" />
				<sdk:DataGridTextColumn Header="Device Type"
										Binding="{Binding DeviceType.Name}" />
				<sdk:DataGridTextColumn Header="Size"
										Binding="{Binding Size}" />
				<sdk:DataGridTextColumn Header="Rotation"
										Binding="{Binding Rotation}" />
			</sdk:DataGrid.Columns>
		</sdk:DataGrid>
		<StackPanel Grid.Row="1"
					Orientation="Horizontal"
					Height="32"
					DataContext="{StaticResource ViewModel}">
			<Button Command="{Binding AddCommand}"
					Margin="3 3 3 3">
				<Image Source="Images/new.png" />
			</Button>
			<Button Command="{Binding RefreshCommand}"
					Margin="3 3 3 3">
				<Image Source="Images/refresh.png" />
			</Button>
			<Button Command="{Binding SubmitCommand}"
					Margin="3 3 3 3">
				<Image Source="Images/save.png" />
			</Button>
			<Button Command="{Binding DeleteCommand}"
					Margin="3 3 3 3">
				<Image Source="Images/delete.png" />
			</Button>
		</StackPanel>
		<StackPanel Grid.Row="2"
					DataContext="{Binding CoolersView, Source={StaticResource ViewModel}}">
			<StackPanel Orientation="Horizontal"
						Margin="3 3 3 3">
				<sdk:Label Content="Model"
						   Width="80" />
				<TextBox Text="{Binding Device.Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						 Width="150" />
			</StackPanel>
			<StackPanel Orientation="Horizontal"
						Margin="3 3 3 3">
				<StackPanel Orientation="Horizontal">
					<sdk:Label Content="Manufacturer"
							   Width="80" />
					<ComboBox ItemsSource="{Binding ManufacturersView, Source={StaticResource ViewModel}}"
							  SelectedValue="{Binding Device.Manufacturer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							  DisplayMemberPath="Name"
							  Width="150" />
				</StackPanel>
				<StackPanel Orientation="Horizontal"
							Margin="3 0 0 0">
					<sdk:Label Content="Price"
							   Width="80" />
					<TextBox Text="{Binding Device.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							 Width="150" />
				</StackPanel>
			</StackPanel>
			<StackPanel Orientation="Horizontal"
						Margin="3 3 3 3">
				<StackPanel Orientation="Horizontal">
					<sdk:Label Content="Size"
							   Width="80" />
					<TextBox Text="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							 Width="150" />
				</StackPanel>
				<StackPanel Orientation="Horizontal"
							Margin="3 0 0 0">
					<sdk:Label Content="Rotation"
							   Width="80" />
					<TextBox Text="{Binding Rotation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							 Width="150" />
				</StackPanel>
			</StackPanel>
			<StackPanel Orientation="Horizontal"
						Margin="3 3 3 3">
				<sdk:Label Content="Device Type"
						   Width="80" />
				<ComboBox ItemsSource="{Binding DeviceTypesView, Source={StaticResource ViewModel}}"
						  SelectedValue="{Binding DeviceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Name"
						  Width="150" />
			</StackPanel>
		</StackPanel>
	</Grid>
</navigation:Page>
